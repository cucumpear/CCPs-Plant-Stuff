<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!--=====================  Wild Tropical ========================-->

	<Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "PlantShrubLow"]/plant</xpath>
	  <value>
			<reproduceMtbDays>3</reproduceMtbDays>
			<lifespanFraction>20</lifespanFraction>
			<dieIfLeafless>false</dieIfLeafless>
	  </value>
	</Operation>

	<Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "PlantAlocasia"]/plant</xpath>
	  <value>
			<reproduceMtbDays>3</reproduceMtbDays>
			<lifespanFraction>20</lifespanFraction>
			<dieIfLeafless>false</dieIfLeafless>
	  </value>
	</Operation>

	<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "PlantClivia"]/graphicData</xpath>
	  <value>
	    <graphicData>
		  <texPath>Clivia</texPath>
		  <graphicClass>Graphic_Random</graphicClass>
			<drawSize>1.1</drawSize>
			<shadowData>
				<volume>(0.3, 0.2, 0.15)</volume>
				<offset>(0,0,-0.1)</offset>
			</shadowData>
		</graphicData>
	  </value>
	</Operation>

	<Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "PlantClivia"]/plant</xpath>
	  <value>
			<reproduceMtbDays>12</reproduceMtbDays>
			<lifespanFraction>20</lifespanFraction>
			<dieIfLeafless>false</dieIfLeafless>
	  </value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
	  <xpath>*/ThingDef[defName = "PlantRafflesia"]/plant</xpath>
	  <value>
			<reproduceMtbDays>12</reproduceMtbDays>
			<lifespanFraction>20</lifespanFraction>
			<dieIfLeafless>false</dieIfLeafless>
	  </value>
	</Operation>
	
</Patch>