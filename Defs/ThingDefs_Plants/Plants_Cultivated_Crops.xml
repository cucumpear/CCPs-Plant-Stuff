<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="PlantBase">
    <defName>PlantCCPAgaveCultivar</defName>
    <label>cultivated agave</label>
    <description>A cultivated variant of a large-leafed desert plant with edible flowers and stalks.</description>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Beauty>1</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Agave</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.2, 0.6, 0.2)</volume>
      </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>20</pathCost>
    <ingestible>
       <nutrition>0.17</nutrition>
    </ingestible>
    <plant>
      <fertilitySensitivity>0.35</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <reproduces>false</reproduces>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawAgave</harvestedThingDef>
      <harvestYield>10</harvestYield>
      <harvestWork>450</harvestWork>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <sowMinSkill>4</sowMinSkill>
      <topWindExposure>0.2</topWindExposure>
      <growDays>4.15</growDays>
      <visualSizeRange>
        <min>0.3</min>
        <max>0.9</max>
      </visualSizeRange>
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="PlantBase">
    <defName>PlantCCPXyloReed</defName>
    <label>xyloreed bush</label>
    <description>A small bush yielding small amounts of wood.</description>
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <Beauty>1</Beauty>
    </statBases>
    <graphicData>
      <texPath>CPXyloReed</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible>
      <nutrition>0.15</nutrition>
    </ingestible>
    <plant>
      <fertilitySensitivity>0.75</fertilitySensitivity>
      <dieIfLeafless>false</dieIfLeafless>
      <reproduces>false</reproduces>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>WoodLog</harvestedThingDef>
      <harvestYield>5</harvestYield>
	  <harvestWork>300</harvestWork>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.35</topWindExposure>
      <growDays>8.15</growDays>
      <visualSizeRange>
        <min>0.7</min>
        <max>1.3</max>
      </visualSizeRange>
    </plant>
  </ThingDef>
  
   <ThingDef ParentName="PlantBase">
    <defName>PlantCCPPastureGrass</defName>
    <label>pasture grass</label>
    <description>Cultivated grass. Grows quickly in reasonably fertile ground, ideal for grazing animals.</description>
    <statBases>
		<MaxHitPoints>95</MaxHitPoints>
		<Beauty>1</Beauty>
    </statBases>
    <graphicData>
		<texPath>Things/Plant/Grass</texPath>
		<graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.6</hideAtSnowDepth>
    <ingestible>
		<nutrition>0.25</nutrition>
    </ingestible>
    <plant>
		<fertilityMin>0.5</fertilityMin>
		<fertilitySensitivity>0.45</fertilitySensitivity>
		<reproduces>false</reproduces>
		<harvestTag>Standard</harvestTag>
		<sowWork>400</sowWork>
		<sowTags>
			<li>Ground</li>
		</sowTags>
		<growDays>1.8</growDays>
		<leaflessGraphicPath>Things/Plant/Grass_Leafless</leaflessGraphicPath>
		<harvestWork>60</harvestWork>
		<maxMeshCount>9</maxMeshCount>
		<visualSizeRange>
			<min>0.4</min>
			<max>0.8</max>
		</visualSizeRange>

		<topWindExposure>0.5</topWindExposure>
    </plant>
  </ThingDef>

</Defs>
