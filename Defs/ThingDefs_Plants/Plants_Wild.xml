<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>PlantCCPDaisy</defName>
    <label>daisies</label>
    <description>A common small flower. It is pretty and very popular.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>5</Beauty>
    </statBases>
    <graphicData>
      <texPath>Daisies</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible>
      <nutrition>0.16</nutrition>
    </ingestible>
    <plant>
	  <lifespanFraction>35</lifespanFraction>
	  <dieIfLeafless>false</dieIfLeafless>
	  <fertilitySensitivity>0.0</fertilitySensitivity>
	  <growDays>1.9</growDays>
	  <sowTags>
        <li>Ground</li>
      </sowTags>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>25</maxMeshCount>
      <visualSizeRange>
        <min>0.25</min>
        <max>0.3</max>
      </visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
      <reproduceMtbDays>7</reproduceMtbDays>
      <wildClusterSizeRange>
        <min>5</min>
        <max>9</max>
      </wildClusterSizeRange>
      <wildClusterRadius>5</wildClusterRadius>
		<wildBiomes>
			<ExtremeDesert>0.01</ExtremeDesert>
			<Desert>0.012</Desert>
			<TropicalRainforest>0.012</TropicalRainforest>
			<TemperateForest>0.13</TemperateForest>
			<BorealForest>0.10</BorealForest>
			<AridShrubland>0.013</AridShrubland>
			<Tundra>0.01</Tundra>
			<TropicalSwamp>0.012</TropicalSwamp>
			<TemperateSwamp>0.1</TemperateSwamp>
			<ColdBog>0.06</ColdBog>
		</wildBiomes>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <defName>PlantCCPBerryBush</defName>
    <label>berry bush</label>
    <description>A bushy plant which yields delicious red berries.</description>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
    </statBases>
    <graphicData>
      <texPath>Berries</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.55, 0.2, 0.2)</volume>
      </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <fillPercent>0.20</fillPercent>
    <pathCost>30</pathCost>
    <ingestible>
      <nutrition>0.35</nutrition>
    </ingestible>
    <plant>
		<reproduceMtbDays>17</reproduceMtbDays>
		<lifespanFraction>22</lifespanFraction>
		<dieIfLeafless>false</dieIfLeafless>
		<fertilityMin>0.5</fertilityMin>
		<fertilitySensitivity>0.5</fertilitySensitivity>
		<growDays>3</growDays>
		<leaflessGraphicPath>Things/Plant/Bush_Leafless</leaflessGraphicPath>
		<immatureGraphicPath>Things/Plant/RaspberryImmature</immatureGraphicPath>
		<harvestYield>10</harvestYield>
		<harvestWork>400</harvestWork>
		<harvestTag>Standard</harvestTag>
		<harvestAfterGrowth>0.30</harvestAfterGrowth>
		<harvestedThingDef>RawBerries</harvestedThingDef>
		<wildCommonalityMaxFraction>3.5</wildCommonalityMaxFraction>
		<wildBiomes>
			<ExtremeDesert>0.01</ExtremeDesert>
			<Desert>0.02</Desert>
			<TropicalRainforest>0.1</TropicalRainforest>
			<TemperateForest>0.15</TemperateForest>
			<BorealForest>0.12</BorealForest>
			<AridShrubland>0.07</AridShrubland>
			<Tundra>0.02</Tundra>
			<TropicalSwamp>0.12</TropicalSwamp>
			<TemperateSwamp>0.18</TemperateSwamp>
			<ColdBog>0.12</ColdBog>
		</wildBiomes>
		<wildClusterSizeRange>
			<min>5</min>
			<max>8</max>
		</wildClusterSizeRange>
		<wildClusterRadius>3.5</wildClusterRadius>
		<visualSizeRange>
			<min>0.7</min>
			<max>1.2</max>
		</visualSizeRange>
		<topWindExposure>0.3</topWindExposure>
	</plant>
  </ThingDef>

</Defs>